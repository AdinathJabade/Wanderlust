<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <div class="d-grid gap-2 mt-4 mb-3">
        <button class="btn btn-success fw-bold py-3 fs-4 shadow-sm w-100" style="letter-spacing:1px;">Login</button>
      </div>
    </form>
  </div>
</div>
