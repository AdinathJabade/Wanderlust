<!-- NEWSLETTER -->
<style>
  .newsletter-section {
    position: relative;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.35)),
      url("/assets/newsletter-bg.jpg") center/cover no-repeat;
    color: #fff;
    min-height: 320px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 1rem;
  }
  .newsletter-section .container {
    position: relative;
    z-index: 2;
  }
  .newsletter-section .form-control {
    border-radius: 2rem 0 0 2rem;
  }
  .newsletter-section .btn {
    border-radius: 0 2rem 2rem 0;
  }
  @media (max-width: 576px) {
    .newsletter-section .input-group {
      /* display: flex; */
      flex-direction: column;
      gap: 0.5rem;
      align-items: stretch;
      border-radius: 0.75rem;
      padding: 0.35rem;
      background: transparent;
    }
    .newsletter-section .form-control,
    .newsletter-section .btn {
      /* border-radius: 2rem !important;
      margin-bottom: 0.5rem; */
      text-align: center;
      border-radius: 0.75rem !important;
      padding: 0.6rem 0.9rem;
      width: 100%;
    }
  }
</style>
<section class="newsletter-section text-center py-5">
  <div class="container">
    <h3 class="mb-3 fw-bold">Stay in the loop</h3>
    <p class="mb-3">Sign up for hand-picked listings and travel tips.</p>
    <form
      class="d-flex justify-content-center align-items-center"
      action="#"
      method="POST"
    >
      <div class="input-group w-50">
        <input
          type="email"
          class="form-control fw-bold"
          placeholder="Your email"
          aria-label="Email"
          required
        />
        <button class="btn btn-danger fw-bold">Subscribe</button>
      </div>
    </form>
  </div>
</section>

<!-- FAQ -->
<section class="py-5 faq">
  <div class="container">
    <h2 class="mb-4 text-center fw-semibold">Frequently Asked Questions</h2>
    <div class="accordion" id="faqAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="faqOne">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            How do I create a listing?
          </button>
        </h2>
        <div
          id="collapseOne"
          class="accordion-collapse collapse show"
          aria-labelledby="faqOne"
          data-bs-parent="#faqAccordion"
        >
          <div class="accordion-body">
            Sign up or log in, then visit
            <a class="fw-bold" href="/listings/new">Add New Listing</a> and
            complete the form with details, images and price.
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="faqTwo">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseTwo"
            aria-expanded="false"
            aria-controls="collapseTwo"
          >
            Are listings moderated?
          </button>
        </h2>
        <div
          id="collapseTwo"
          class="accordion-collapse collapse"
          aria-labelledby="faqTwo"
          data-bs-parent="#faqAccordion"
        >
          <div class="accordion-body">
            Listings are user-generated. Please follow community guidelines.
            Admin moderation can be added later for flagged content.
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="faqThree">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapseThree"
            aria-expanded="false"
            aria-controls="collapseThree"
          >
            How are images stored?
          </button>
        </h2>
        <div
          id="collapseThree"
          class="accordion-collapse collapse"
          aria-labelledby="faqThree"
          data-bs-parent="#faqAccordion"
        >
          <div class="accordion-body">
            Images are uploaded to Cloudinary. Make sure Cloudinary env
            variables are set for uploads to work.
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
<style>
  @media (max-width: 576px) {
    .cta-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
  }
</style>
<section class="py-5 text-center">
  <div class="cta-buttons container">
    <h2 class="mb-3 fw-bold">Ready to list or discover your next stay?</h2>
    <a href="/listings" class="btn btn-danger btn-lg me-2 fw-bold"
      >Explore Listings</a
    >
    <a href="/signup" class="btn btn-outline-danger btn-lg">Get Started</a>
  </div>
</section>
