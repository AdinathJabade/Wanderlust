<% layout("/layouts/boilerplate", { currUser: currUser, hideSearch: true }) %>

<!-- Hero Section -->
<section class="hero-section d-flex flex-column align-items-center justify-content-center text-center">
  <div class="container py-5">
    <h1 class="display-4 fw-bold mb-3">Welcome to Tripster</h1>
    <p class="lead mb-4">Discover and book unique stays, experiences, and adventures around the world.</p>
    <a href="/listings" class="btn btn-lg btn-danger hero-btn px-5 py-3 fw-bold">Explore Listings</a>
  </div>
</section>

<!-- About Section -->
<section class="about-section py-5 bg-light text-center">
  <div class="container">
    <h2 class="mb-3">What is Tripster?</h2>
    <p class="mb-4">Tripster is your gateway to unique travel experiences. Find, book, and review amazing places to stay and explore, all in one place.</p>
    <div class="row justify-content-center">
      <div class="col-6 col-md-3 mb-3">
        <i class="fa-solid fa-globe fa-2x mb-2 text-primary"></i>
        <h5>Global Listings</h5>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <i class="fa-solid fa-star fa-2x mb-2 text-warning"></i>
        <h5>Trusted Reviews</h5>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <i class="fa-solid fa-lock fa-2x mb-2 text-success"></i>
        <h5>Secure Booking</h5>
      </div>
      <div class="col-6 col-md-3 mb-3">
        <i class="fa-solid fa-users fa-2x mb-2 text-info"></i>
        <h5>Community</h5>
      </div>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="how-section py-5 text-center">
  <div class="container">
    <h2 class="mb-4">How It Works</h2>
    <div class="row justify-content-center">
      <div class="col-12 col-md-4 mb-4">
        <i class="fa-solid fa-search fa-2x mb-2 text-danger"></i>
        <h5>1. Search</h5>
        <p>Find listings by location, contry, or category.</p>
      </div>
      <div class="col-12 col-md-4 mb-4">
        <i class="fa-solid fa-calendar-check fa-2x mb-2 text-success"></i>
        <h5>2. Book</h5>
        <p>Book your favorite stay securely and easily.</p>
      </div>
      <div class="col-12 col-md-4 mb-4">
        <i class="fa-solid fa-pen-nib fa-2x mb-2 text-primary"></i>
        <h5>3. Review</h5>
        <p>Share your experience and help others choose.</p>
      </div>
    </div>
  </div>
</section>

<!-- Featured Listings Section (placeholder) -->
<section class="featured-section py-5 bg-light text-center">
  <div class="container">
    <h2 class="mb-4">Featured Listings</h2>
    <p class="mb-0">Check out some of our top-rated stays and trending destinations!</p>
    <!-- You can add a carousel or grid of featured listings here -->
  </div>
</section>

<!-- Testimonials Section (placeholder) -->
<section class="testimonials-section py-5 text-center">
  <div class="container">
    <h2 class="mb-4">What Our Users Say</h2>
    <div class="row justify-content-center">
      <div class="col-12 col-md-4 mb-4">
        <blockquote class="blockquote">“Tripster made my vacation unforgettable!”</blockquote>
        <footer class="blockquote-footer">Aditi, Mumbai</footer>
      </div>
      <div class="col-12 col-md-4 mb-4">
        <blockquote class="blockquote">“Easy to use and so many unique places.”</blockquote>
        <footer class="blockquote-footer">Rahul, Goa</footer>
      </div>
      <div class="col-12 col-md-4 mb-4">
        <blockquote class="blockquote">“I found the perfect stay for my family.”</blockquote>
        <footer class="blockquote-footer">Priya, Delhi</footer>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section py-5 bg-danger rounded text-white text-center">
  <div class="container">
    <h2 class="mb-3">Ready to start your next adventure?</h2>
    <a href="/signup" class="btn btn-light btn-lg fw-bold">Sign Up Now</a>
  </div>
</section>
