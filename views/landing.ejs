<% layout("/layouts/boilerplate", { currUser: currUser, hideSearch: true }) %>

<style>
  .hero {
    position: relative;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.25)),
      url("/assets/tripster-bg.jpg") center/cover no-repeat;
    color: #fff;
    min-height: 62vh;
    display: flex;
    align-items: center;
  }
  .hero .lead {
    opacity: 0.95;
  }
  .search-box {
    max-width: 760px;
    margin: 1.2rem auto 0;
  }
  /* Make the search input clearly visible over the hero image */
  .search-box .form-control {
    background: #fff;
    color: #222;
  }
  .input-group.shadow-sm {
    background: rgba(255, 255, 255, 0.02);
  }
  .feature-card {
    transition: transform 0.18s ease, box-shadow 0.18s ease;
  }
  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }
  .faq .accordion-button:focus {
    box-shadow: none;
  }
  .testimonial {
    background: rgba(255, 255, 255, 0.95);
  }

  /* Responsive: stack search input and button on small screens */
  @media (max-width: 576px) {
    .hero {
      min-height: 56vh;
    }
    .search-box {
      padding: 0 1rem;
    }
    .search-box .input-group {
      flex-direction: column;
      gap: 0.5rem;
      align-items: stretch;
      border-radius: 0.75rem;
      padding: 0.35rem;
      background: transparent;
    }
    .search-box .input-group .form-control {
      border-radius: 0.75rem !important;
      padding: 0.6rem 0.9rem;
      width: 100%;
    }
    .search-box .input-group .btn {
      width: 100%;
      border-radius: 0.75rem !important;
      padding: 0.6rem 1rem;
    }
    .hero-buttons {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
  }
</style>

<!-- HERO -->
<section class="hero">
  <div class="container text-center py-5">
    <h1 class="display-4 fw-bold">Find your next stay with Tripster</h1>
    <p class="lead mb-3">
      Unique stays, honest reviews and local experiences — all in one place.
    </p>

    <!-- Search form -> GET /listings/search?q= -->
    <form action="/listings/search" method="GET" class="search-box">
      <div class="input-group shadow-sm rounded-pill overflow-hidden">
        <input
          name="q"
          type="search"
          class="form-control form-control-lg border-0"
          placeholder="Search by city, country or location"
          aria-label="Search"
        />
        <button class="btn btn-danger btn-lg px-4 fw-bold" type="submit">
          Search
        </button>
      </div>
    </form>

    <div class="hero-buttons mt-4">
      <a href="/listings" class="btn btn-outline-light btn-lg me-2"
        >Browse Listings</a
      >
      <a href="/signup" class="btn btn-light btn-lg text-danger fw-bold"
        >Create Account</a
      >
    </div>
  </div>
</section>

<!-- FEATURES -->
<section class="py-5 text-center">
  <div class="container">
    <div class="row g-3 justify-content-center">
      <div class="col-12 col-md-4">
        <div class="p-4 rounded-4 feature-card bg-white">
          <i class="fa-solid fa-globe fa-2x text-danger mb-2"></i>
          <h5 class="fw-bold">Global Listings</h5>
          <p class="mb-0 text-muted">
            Properties from cities and towns around the world.
          </p>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="p-4 rounded-4 feature-card bg-white">
          <i class="fa-solid fa-camera-retro fa-2x text-primary mb-2"></i>
          <h5 class="fw-bold">Rich Photos</h5>
          <p class="mb-0 text-muted">
            Upload and store images using Cloudinary.
          </p>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="p-4 rounded-4 feature-card bg-white">
          <i class="fa-solid fa-star fa-2x text-warning mb-2"></i>
          <h5 class="fw-bold">Trusted Reviews</h5>
          <p class="mb-0 text-muted">
            Leave honest feedback for other travelers.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Listings removed per request -->

