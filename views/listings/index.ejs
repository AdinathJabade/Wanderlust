<% layout("/layouts/boilerplate")%>
<style>
  html,
  body {
    max-width: 100vw;
    overflow-x: hidden !important;
  }
  #filters {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1rem;
    margin-top: 1rem;
    position: relative;
    width: 100%;
    max-width: 100vw;
    box-sizing: border-box;
  }
  .filter {
    text-align: center;
    margin: 0 0.5rem;
    opacity: 0.7;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
    min-height: 70px;
    justify-content: center;
    transition: box-shadow 0.2s;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    width: 100%;
    border: 1px solid #fe424d;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .filter-more {
    display: none;
    align-items: center;
    justify-content: center;
    margin: 0 0.5rem;
    cursor: pointer;
    font-size: 1.5rem;
    background: #fff;
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    color: #fe424d;
    transition: background 0.2s;
    min-width: 48px;
    min-height: 48px;
    display: flex;
  }
  .filter-more:hover {
    background: #fe424d;
    color: #fff;
  }
  @media (max-width: 991px) {
    #filters {
      justify-content: flex-start;
      gap: 1rem;
    }
    #filters .filter {
      display: none;
    }
    #filters .filter:nth-child(-n + 4) {
      display: flex;
    }
    #filters .filter-more {
      display: flex;
    }
  }
  @media (max-width: 600px) {
    #filters {
      justify-content: flex-start;
      gap: 0.5rem;
    }
    #filters .filter:nth-child(-n + 2) {
      display: flex;
    }
    #filters .filter:nth-child(n + 3) {
      display: none;
    }
    #filters .filter-more {
      display: flex;
    }
  }
  #allFiltersModal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    width: 100vw;
    overflow-x: hidden;
    overflow-y: auto;
  }
  #allFiltersModal .modal-content {
    background: #fff;
    border-radius: 1rem;
    padding: 2rem 1rem;
    max-width: 95vw;
    max-height: 80vh;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    box-sizing: border-box;
  }
  @media (max-width: 600px) {
    #allFiltersModal .modal-content {
      max-width: 98vw;
      max-height: 80vh;
      padding: 1rem 0.2rem;
      gap: 1.2rem;
    }
  }
  #allFiltersModal .close-modal {
    position: absolute;
    top: 1rem;
    right: 2rem;
    font-size: 2rem;
    color: #fe424d;
    background: none;
    border: none;
    cursor: pointer;
  }
</style>

