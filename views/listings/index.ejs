<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    let taxInfo = document.querySelectorAll(".tax-info");
    for (info of taxInfo) {
      if (info.style.display === "inline") {
        info.style.display = "none";
      } else {
        info.style.display = "inline";
      }
    }
  });
  // Responsive filter modal logic
  const showAllFiltersBtn = document.getElementById("showAllFiltersBtn");
  const allFiltersModal = document.getElementById("allFiltersModal");
  const closeAllFiltersModal = document.getElementById("closeAllFiltersModal");
  if (showAllFiltersBtn && allFiltersModal && closeAllFiltersModal) {
    showAllFiltersBtn.addEventListener("click", () => {
      allFiltersModal.style.display = "flex";
    });
    closeAllFiltersModal.addEventListener("click", () => {
      allFiltersModal.style.display = "none";
    });
    allFiltersModal.addEventListener("click", (e) => {
      if (e.target === allFiltersModal) allFiltersModal.style.display = "none";
    });
  }
</script>
